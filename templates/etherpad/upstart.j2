description "etherpad-lite"

start on started networking
stop on runlevel [!2345]

env EPHOME={{etherpad_install_dir}}
env EPLOGS={{etherpad_log}}
env EPUSER={{deploy_user}}
env PATH={{npm_path_detected}}:/usr/local/sbin:/usr/local/bin:/usr/bin:/usr/sbin:/sbin:/bin:$PATH
env NODE_BIN=/var/lib/${EPUSER}/.nvm/versions/node/v0.12.7/bin/node

respawn

pre-start script
    cd $EPHOME
    mkdir $EPLOGS                              ||true
    chown $EPUSER:root $EPLOGS                 ||true
    chmod 0755 $EPLOGS                         ||true
    chown -R $EPUSER:root $EPHOME/var          ||true
    echo $PATH
    $EPHOME/bin/installDeps.sh >> $EPLOGS/error.log || { stop; exit 1; }
end script

script
  cd $EPHOME/
  exec su -s /bin/sh -c 'exec "$0" "$@"' $EPUSER -- node node_modules/ep_etherpad-lite/node/server.js \
                        >> $EPLOGS/access.log \
                        2>> $EPLOGS/error.log
end script
